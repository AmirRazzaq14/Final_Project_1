<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.AddProgressController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="700" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" mouseTransparent="false"
            stylesheets="@chart-styles.css">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" 
                style="-fx-background: transparent; -fx-background-color: transparent; -fx-control-inner-background: transparent;" mouseTransparent="false">
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;" mouseTransparent="false">
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <Label text="ðŸ“Š Add Progress Entry" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
                <Label text="Track your fitness journey" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 16px;" />
            </VBox>

            <!-- Main Form Card -->
            <VBox spacing="25" style="-fx-background-color: rgba(255,255,255,0.98); -fx-background-radius: 25; -fx-padding: 40; -fx-pref-width: 650; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0.5, 0, 5);" mouseTransparent="false">
                
                <!-- Date Section -->
                <VBox spacing="10" style="-fx-background-color: rgba(102,126,234,0.1); -fx-background-radius: 15; -fx-padding: 20;">
                    <Label text="ðŸ“… Date" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <DatePicker fx:id="datePicker" editable="true" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-mouse-transparent: false; -fx-text-fill: black; -fx-color: black;" />
                </VBox>

                <!-- Body Metrics Section -->
                <VBox spacing="15">
                    <Label text="ðŸ’ª Body Metrics" style="-fx-text-fill: #2c3e50; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
                    
                    <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Current Weight (lbs)" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="currentWeightField" promptText="Enter current weight" editable="true" 
                                   style="-fx-background-color: white; -fx-background-radius: 8; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-mouse-transparent: false; -fx-text-fill: black;" />
                    </VBox>
                    
                    <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Target Weight (lbs)" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="targetWeightField" promptText="Enter target weight" editable="true" 
                                   style="-fx-background-color: white; -fx-background-radius: 8; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-mouse-transparent: false; -fx-text-fill: black;" />
                    </VBox>
                    
                    <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Body Fat Percentage (%)" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="bodyFatField" promptText="Enter body fat percentage" editable="true" 
                                   style="-fx-background-color: white; -fx-background-radius: 8; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-mouse-transparent: false; -fx-text-fill: black;" />
                    </VBox>
                </VBox>

                <!-- Nutrition Section -->
                <VBox spacing="15">
                    <Label text="ðŸŽ Nutrition" style="-fx-text-fill: #2c3e50; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(39,174,96,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                            <Label text="Calories Consumed" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="caloriesConsumedField" promptText="Enter calories consumed" editable="true" 
                                       style="-fx-background-color: white; -fx-background-radius: 8; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-mouse-transparent: false; -fx-text-fill: black;" />
                        </VBox>
                        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(39,174,96,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                            <Label text="Calorie Target" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="caloriesTargetField" promptText="Enter calorie target" editable="true" 
                                       style="-fx-background-color: white; -fx-background-radius: 8; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-mouse-transparent: false; -fx-text-fill: black;" />
                        </VBox>
                    </HBox>
                    <VBox spacing="8" style="-fx-background-color: rgba(39,174,96,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Steps" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="stepsField" promptText="Enter daily steps" editable="true" 
                                   style="-fx-background-color: white; -fx-background-radius: 8; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-mouse-transparent: false; -fx-text-fill: black;" />
                    </VBox>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button text="ðŸ’¾ Save Entry" onAction="#handleSave" 
                            style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-min-width: 250; -fx-pref-width: 250; -fx-max-width: 250; -fx-min-height: 50; -fx-pref-height: 50; -fx-max-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 8, 0.5, 0, 3); -fx-padding: 10 20; -fx-content-display: CENTER; -fx-alignment: CENTER; -fx-mouse-transparent: false;" />
                    <Button text="Cancel" onAction="#handleCancel" 
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12; -fx-min-width: 250; -fx-pref-width: 250; -fx-max-width: 250; -fx-min-height: 50; -fx-pref-height: 50; -fx-max-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(149,165,166,0.3), 5, 0.5, 0, 2); -fx-padding: 10 20; -fx-content-display: CENTER; -fx-alignment: CENTER; -fx-mouse-transparent: false;" />
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>









