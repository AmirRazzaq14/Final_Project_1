<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AddProgressController">

    <VBox alignment="CENTER" spacing="25" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" blendMode="SCREEN" spacing="20" style="-fx-background-radius: 20; -fx-padding: 40; -fx-pref-width: 550;">
            <Label style="-fx-text-fill: white; -fx-font-size: 40px; -fx-font-weight: bold; -fx-font-family: Baskerville;" text="Add Progress Entry">
                <font>
                    <Font name="Avenir Book" size="21.0" />
                </font>
                <textFill>
                    <LinearGradient endX="1.0" endY="1.0">
                        <stops>
                            <Stop>
                                <color>
                                    <Color />
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </textFill></Label>

            <VBox spacing="15" style="-fx-pref-width: 476;">
                <VBox blendMode="LIGHTEN" prefHeight="55.0" prefWidth="527.0" spacing="8">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Date" />
                    <DatePicker fx:id="datePicker" style="-fx-background-radius: 10; -fx-pref-height: 40;" />
                </VBox>

                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Weight (lbs)" />
                        <TextField fx:id="weightField" promptText="Optional" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Body Fat %">
                            <font>
                                <Font name="Brush Script MT Italic" size="13.0" />
                            </font></Label>
                        <TextField fx:id="bodyFatField" promptText="Optional" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>
                </HBox>

                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Calories Consumed" />
                        <TextField fx:id="caloriesField" promptText="Optional" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Calorie Target" />
                        <TextField fx:id="calorieTargetField" promptText="Optional" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black; -fx-background-color: white;" />
                    </VBox>
                </HBox>

                <VBox spacing="8">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Steps" />
                    <TextField fx:id="stepsField" promptText="Optional" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                </VBox>

                <Separator />

                <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Personal Records (Optional)" />

                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Bench PR (lbs)" />
                        <TextField fx:id="benchWeightField" promptText="Weight" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Reps" />
                        <TextField fx:id="benchRepsField" promptText="Reps" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                    </VBox>
                </HBox>

                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Squat PR (lbs)" />
                        <TextField fx:id="squatWeightField" promptText="Weight" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" VBox.vgrow="ALWAYS">
                            <cursor>
                                <Cursor fx:constant="DEFAULT" />
                            </cursor></TextField>
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Reps" />
                        <TextField fx:id="squatRepsField" promptText="Reps" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                    </VBox>
                </HBox>

                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Deadlift PR (lbs)">
                            <font>
                                <Font name="Arial Black" size="13.0" />
                            </font></Label>
                        <TextField fx:id="deadliftWeightField" promptText="Weight" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Reps" />
                        <TextField fx:id="deadliftRepsField" promptText="Reps" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15; -fx-font-family: Arial Black;" />
                    </VBox>
                </HBox>
            </VBox>

            <HBox alignment="CENTER" spacing="15" style="-fx-pref-width: 470;">
                <Button onAction="#handleSave" style="-fx-background-color: #9c27B0; -fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-font-family: Arial Black; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Save" textFill="#0a0a0a">
                    <effect>
                        <Glow />
                    </effect></Button>
                <Button onAction="#handleCancel" style="-fx-background-color: white; -fx-text-fill: 67eea; -fx-font-size: 18; -fx-background-radius: 10; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: Arial Black; -fx-font-weight: bold;" text="Cancel">
                    <effect>
                        <Glow />
                    </effect></Button>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
