<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:controller="com.example.demo.WorkoutHomeController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <!-- Navigation Buttons -->
    <HBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
        <Button text="My Profile" onAction="#handleProfileSetup" 
                style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        <Button text="My Workout Plan" onAction="#handleMyWorkoutPlan" 
                style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Progress Dashboard" onAction="#handleProgressDashboard" 
                style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
    </HBox>

    <!-- Title -->
    <Label text="What is your goal today?" 
           AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
           style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />

    <!-- Main Content Container -->
    <VBox fx:id="mainContent" alignment="CENTER" spacing="40"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="120" AnchorPane.bottomAnchor="0">

        <!-- Goal Selection Cards -->
        <HBox fx:id="goalCardsContainer" alignment="CENTER" spacing="40">
            <!-- Cutting Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 30; -fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
                <Label text="Cutting" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label text="Lose fat, stay strong." wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.95); -fx-alignment: center; -fx-pref-width: 220;" />
                <Button text="Select" onAction="#handleCutting"
                        style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
            </VBox>
            <!-- Bulking Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 30; -fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
                <Label text="Bulking" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label text="Build muscle mass." wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.95); -fx-alignment: center; -fx-pref-width: 220;" />
                <Button text="Select" onAction="#handleBulking"
                        style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
            </VBox>
            <!-- Maintaining Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 30; -fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
                <Label text="Maintaining" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label text="Stay balanced and healthy." wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.95); -fx-alignment: center; -fx-pref-width: 220;" />
                <Button text="Select" onAction="#handleMaintain"
                        style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
            </VBox>
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="customWorkoutsButton" text="Filter &amp; Select Custom Workouts" onAction="#handleSelectWorkouts"
                    style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 18px; -fx-pref-width: 300; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
            <Button text="Personal Customization" onAction="#handlePersonalCustomization" 
                    style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 18px; -fx-pref-width: 280; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        </HBox>

        <!-- Workout Section - Replaces cards when visible -->
        <VBox fx:id="workoutSection" alignment="CENTER" spacing="20" visible="false" managed="false">
            <Label fx:id="workoutTitle" text="Today's Suggested Workouts"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <VBox fx:id="workoutList" spacing="15" alignment="CENTER" style="-fx-pref-width: 800;"/>
            <Button text="Back to Goals" onAction="#handleBackToGoals" 
                    style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        </VBox>
    </VBox>

</AnchorPane>
