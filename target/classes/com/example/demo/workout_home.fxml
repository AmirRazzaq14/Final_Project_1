<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.demo.WorkoutHomeController">

    <!-- Navigation Buttons -->
    <HBox spacing="15" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="20">
        <Button onAction="#handleProfileSetup" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="My Profile" />
        <Button onAction="#handleMyWorkoutPlan" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="My Workout Plan" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleProgressDashboard" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 200; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);-fx-font-family: arial black;" text="Progress Dashboard" />
    </HBox>

    <!-- Main Content Container -->
    <VBox fx:id="mainContent" alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="120">

        <!-- Title -->
        <Label style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0); -fx-font-family: baskerville;" text="What is your goal today?" />

        <!-- Goal Selection Cards -->
        <HBox fx:id="goalCardsContainer" alignment="CENTER" spacing="40">
            <!-- Cutting Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 30; -fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: Baskerville;" text="Cutting" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.95); -fx-alignment: center; -fx-pref-width: 220;" text="Lose fat, stay strong." wrapText="true" />
                <Button onAction="#handleCutting" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Select" />
            </VBox>
            <!-- Bulking Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 30; -fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: Baskerville;" text="Bulking" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.95); -fx-alignment: center; -fx-pref-width: 220;" text="Build muscle mass." wrapText="true" />
                <Button onAction="#handleBulking" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Select" />
            </VBox>
            <!-- Maintaining Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 30; -fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: Baskerville;" text="Maintaining" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.95); -fx-alignment: center; -fx-pref-width: 220;" text="Stay balanced and healthy." wrapText="true" />
                <Button onAction="#handleMaintain" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Select" />
            </VBox>
        </HBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="customWorkoutsButton" onAction="#handleSelectWorkouts" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 300; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Filter &amp; Select Custom Workouts" />
            <Button onAction="#handlePersonalCustomization" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 280; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Personal Customization" />
        </HBox>

        <!-- Workout Section - Replaces cards when visible -->
        <VBox fx:id="workoutSection" alignment="CENTER" managed="false" spacing="20" visible="false">
            <Label fx:id="workoutTitle" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" text="Today's Suggested Workouts" />
            <VBox fx:id="workoutList" alignment="CENTER" spacing="15" style="-fx-pref-width: 800;" />
            <Button onAction="#handleBackToGoals" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Back to Goals" />
        </VBox>
    </VBox>

</AnchorPane>
