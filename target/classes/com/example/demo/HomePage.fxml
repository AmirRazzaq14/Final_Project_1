<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HomeController">

    <Label style="-fx-font-size: 46px; -fx-font-weight: bold; -fx-font-family: Baskerville; -fx-text-fill: white; -fx-alignment: center; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" text="What is your goal today?" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="40" />

    <HBox alignment="CENTER" spacing="40" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="120">

        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 25; -fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
            <ImageView fx:id="cuttingImage" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label style="-fx-font-family: Baskerville; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" text="Cutting" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 16px;" text="Lose fat, stay strong." />
            <Button fx:id="cuttingBtn" onAction="#handleCutting" style="-fx-background-color: white; -fx-background-radius: 20; -fx-text-fill: #667eea; -fx-font-family: Arial Black; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Select" />
        </VBox>

        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 25; -fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
            <ImageView fx:id="bulkingImage" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label style="-fx-font-size: 30; -fx-font-family: Baskerville; -fx-font-weight: bold; -fx-text-fill: white;" text="Bulking" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 16px;" text="Build muscle mass." />
            <Button fx:id="bulkingBtn" onAction="#handleBulking" style="-fx-font-family: Arial Black; -fx-background-color: white; -fx-background-radius: 20; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Select" />
        </VBox>

        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 25; -fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
            <ImageView fx:id="maintainImage" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label style="-fx-font-family: Baskerville; -fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: white;" text="Maintaining" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 16px;" text="Stay balanced and healthy." />
            <Button fx:id="maintainBtn" onAction="#handleMaintain" style="-fx-font-family: Arial Black; -fx-background-color: white; -fx-background-radius: 20; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Select" />
        </VBox>
    </HBox>

    <VBox fx:id="workoutSection" spacing="20" visible="false" AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80" AnchorPane.topAnchor="550">
        <Label fx:id="workoutTitle" style="-fx-font-family: Arial Black; -fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0.5, 0, 0);" text="Today's Suggested Workouts" />
        <VBox fx:id="workoutList" spacing="15" />
    </VBox>

</AnchorPane>
