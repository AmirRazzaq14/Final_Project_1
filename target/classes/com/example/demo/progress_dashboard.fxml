<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.ProgressDashboardController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css,@chart-styles.css"
            styleClass="anchor-pane">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="0" style="-fx-padding: 0 20 10 20; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0;">
                <Label text="ðŸ“Š Progress Dashboard" styleClass="heading-white" style="-fx-font-size: 36px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="âž• Add Progress Entry" onAction="#handleAddProgress" styleClass="nav-button" style="-fx-min-width: 200; -fx-pref-width: 200;" />
                <Button text="ðŸ  Return to Home" onAction="#handleBack" styleClass="nav-button" style="-fx-min-width: 180; -fx-pref-width: 180;" />
            </HBox>

            <!-- Welcome Banner -->
            <HBox fx:id="welcomeBannerContainer" alignment="CENTER" spacing="30" styleClass="glass-card" style="-fx-padding: 24 50; -fx-min-height: 100; -fx-pref-height: 100; -fx-margin: 3 0 0 0;" visible="false">
                <Label fx:id="welcomeMessageLabel" text="ðŸ’ª Keep pushing forward! Your progress is inspiring." 
                       styleClass="body-text-white" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalEntriesLabel" text="ðŸ“Š 0 entries logged" 
                       styleClass="body-text-white" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            </HBox>

            <!-- Progress Insights Card -->
            <VBox fx:id="progressInsightsContainer" spacing="20" styleClass="glass-card" style="-fx-padding: 30 40; -fx-margin: 3 0 0 0; -fx-pref-height: 200; -fx-min-height: 200; -fx-max-height: 200;" visible="false">
                <Label text="ðŸ“Š Progress Insights" styleClass="body-text-white" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                <HBox spacing="30" alignment="CENTER_LEFT">
                    <VBox spacing="10" style="-fx-pref-width: 350;">
                        <Label fx:id="streakLabel" text="ðŸ”¥ Current Streak: --" styleClass="body-text-white" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label fx:id="weeklyProgressLabel" text="ðŸ“ˆ This Week's Progress: --" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                    </VBox>
                    <VBox spacing="10" style="-fx-pref-width: 350;">
                        <Label fx:id="averagePerWeekLabel" text="ðŸ“Š Avg/Week: --" styleClass="body-text-white" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label fx:id="totalEntriesCountLabel" text="Total: -- entries" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                    </VBox>
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label fx:id="overallTrendLabel" text="ðŸ“Š Overall Trend: --" styleClass="body-text-white" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <Label fx:id="consistencyLabel" text="â­ Consistency Score: --" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Progress Highlights -->
            <HBox fx:id="highlightsContainer" spacing="15" alignment="CENTER" style="-fx-padding: 3 0 0 0;" visible="false">
                <VBox spacing="8" alignment="CENTER" styleClass="glass-card" style="-fx-padding: 24 36; -fx-pref-width: 220; -fx-min-height: 180;">
                    <Label fx:id="daysTrackingLabel" text="ðŸ“… 0 days" styleClass="body-text-white" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Label text="Tracking Progress" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                </VBox>
                <VBox spacing="8" alignment="CENTER" styleClass="glass-card" style="-fx-padding: 24 36; -fx-pref-width: 220; -fx-min-height: 180;">
                    <Label fx:id="totalWeightChangeLabel" text="âš–ï¸ --" styleClass="body-text-white" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Label text="Total Change" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                </VBox>
                <VBox spacing="8" alignment="CENTER" styleClass="glass-card" style="-fx-padding: 24 36; -fx-pref-width: 220; -fx-min-height: 180;">
                    <Label fx:id="bestCalorieDayLabel" text="ðŸ”¥ --" styleClass="body-text-white" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Label text="Best Calorie Day" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                </VBox>
                <VBox spacing="8" alignment="CENTER" styleClass="glass-card" style="-fx-padding: 24 36; -fx-pref-width: 220; -fx-min-height: 180;">
                    <Label fx:id="highestStepsLabel" text="ðŸ‘£ --" styleClass="body-text-white" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                    <Label text="Highest Steps" styleClass="body-text-white" style="-fx-font-size: 18px;" />
                </VBox>
            </HBox>

            <!-- Empty State -->
            <VBox fx:id="emptyStateContainer" alignment="CENTER" spacing="20" style="-fx-padding: 60;" visible="false">
                <Label text="ðŸ“ˆ No Progress Data Yet" styleClass="heading-white" style="-fx-font-size: 32px;" />
                <Label text="Start tracking your fitness journey by adding your first progress entry!" 
                       styleClass="body-text-white" style="-fx-font-size: 18px; -fx-alignment: center;" />
                <Button text="âž• Add Your First Entry" onAction="#handleAddProgress" styleClass="btn-secondary" 
                        style="-fx-font-size: 18px; -fx-pref-width: 250; -fx-pref-height: 50;" />
            </VBox>

            <!-- Summary Cards -->
            <HBox fx:id="summaryCardsContainer" spacing="12" alignment="CENTER" style="-fx-padding: 0;" visible="false">
                <VBox spacing="8" styleClass="glass-card-heavy" style="-fx-padding: 25 30; -fx-pref-width: 240; -fx-min-height: 180;">
                    <Label text="âš–ï¸ Current Weight" styleClass="subtitle" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="latestWeightLabel" text="--" styleClass="heading-2" style="-fx-font-size: 42px;" />
                    <Label fx:id="weightChangeLabel" text="" style="-fx-text-fill: #27ae60; -fx-font-size: 16px;" />
                </VBox>
                <VBox spacing="8" styleClass="glass-card-heavy" style="-fx-padding: 25 30; -fx-pref-width: 260; -fx-min-height: 180;">
                    <Label text="ðŸ“‰ Body Fat %" styleClass="subtitle" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="latestBodyFatLabel" text="--" styleClass="heading-2" style="-fx-font-size: 42px;" />
                    <Label fx:id="bodyFatChangeLabel" text="tracking over time" style="-fx-text-fill: #9b59b6; -fx-font-size: 16px;" />
                </VBox>
                <VBox spacing="8" styleClass="glass-card-heavy" style="-fx-padding: 25 30; -fx-pref-width: 260; -fx-min-height: 180;">
                    <Label text="ðŸ”¥ Calorie Adherence" styleClass="subtitle" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="calorieSummaryLabel" text="--" styleClass="heading-2" style="-fx-font-size: 42px;" />
                    <Label text="avg of logged days" styleClass="subtitle" style="-fx-font-size: 16px;" />
                </VBox>
                <VBox spacing="8" styleClass="glass-card-heavy" style="-fx-padding: 25 30; -fx-pref-width: 240; -fx-min-height: 180;">
                    <Label text="ðŸ‘£ Daily Steps" styleClass="subtitle" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="stepsSummaryLabel" text="--" styleClass="heading-2" style="-fx-font-size: 42px;" />
                    <Label text="avg per entry" styleClass="subtitle" style="-fx-font-size: 16px;" />
                </VBox>
                <VBox spacing="8" styleClass="glass-card-heavy" style="-fx-padding: 25 30; -fx-pref-width: 240; -fx-min-height: 180;">
                    <Label text="ðŸ“… Last Entry" styleClass="subtitle" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label fx:id="lastEntryLabel" text="No entries yet" wrapText="true" styleClass="heading-4" />
                    <Label text="Keep logging!" styleClass="subtitle" style="-fx-font-size: 16px;" />
                </VBox>
            </HBox>

            <!-- Progress History Table -->
            <VBox fx:id="historyContainer" spacing="10" styleClass="glass-card-heavy" style="-fx-padding: 20;" visible="false">
                <Label text="ðŸ“‹ Progress History" styleClass="heading-3" />
                <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-pref-height: 550; -fx-min-height: 550;">
                    <VBox fx:id="progressHistoryContainer" spacing="10" />
                </ScrollPane>
            </VBox>

            <!-- Progress Chart -->
            <VBox fx:id="chartContainer" spacing="5" styleClass="glass-card-heavy" style="-fx-padding: 15;" visible="false">
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
