<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="800" prefWidth="1200" 
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane"
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            fx:controller="com.example.demo.WorkoutSelectionController">
    <VBox alignment="CENTER" spacing="25" styleClass="glass-card-heavy" style="-fx-pref-width: 700; -fx-padding: 50;" 
          AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0">
        <Label styleClass="heading-2" text="Select &amp; Add Workouts" />
        <VBox spacing="15" style="-fx-pref-width: 600;">
            <VBox spacing="8">
                <Label text="Muscle Group" styleClass="input-label" />
                <ComboBox fx:id="muscleGroupComboBox" promptText="Select Muscle Group" styleClass="combo-box" style="-fx-pref-height: 45;" />
            </VBox>
            <VBox spacing="8">
                <Label text="Search Workouts" styleClass="input-label" />
                <TextField fx:id="workoutSearchField" promptText="Search workouts..." styleClass="input-field" />
            </VBox>
            <VBox spacing="8">
                <Label text="Available Workouts" styleClass="input-label" />
                <ListView fx:id="workoutListView" prefHeight="200" styleClass="list-view" />
            </VBox>
        </VBox>
        <HBox spacing="12" alignment="CENTER">
            <Button onAction="#handleAddWorkout" styleClass="btn-primary" style="-fx-pref-width: 160; -fx-pref-height: 45; -fx-font-size: 14px;" text="Add to My Plan" />
            <Button onAction="#handleRemoveWorkout" styleClass="btn-danger" style="-fx-pref-width: 180; -fx-pref-height: 45; -fx-font-size: 14px;" text="Remove from Plan" />
            <Button onAction="#handleBackToHome" styleClass="btn-secondary" style="-fx-pref-width: 100; -fx-pref-height: 45; -fx-font-size: 14px; -fx-background-color: #95a5a6; -fx-text-fill: white;" text="Back" />
        </HBox>
        <VBox spacing="10" style="-fx-pref-width: 600;">
            <Label styleClass="heading-4" text="My Workout Plan:" />
            <ListView fx:id="myWorkoutsListView" prefHeight="120" styleClass="list-view" />
        </VBox>
    </VBox>
</AnchorPane>
