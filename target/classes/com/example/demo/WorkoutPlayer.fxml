<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.WorkoutPlayerController"
            prefWidth="430" prefHeight="800" style="-fx-background-color: #1b1b1b;">

    <!-- The list of exercises, plain text -->
    <VBox alignment="TOP_CENTER" spacing="8" layoutY="32" layoutX="20" prefWidth="390" AnchorPane.topAnchor="32" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="120">
        <Label fx:id="workoutTitle" text="Today's Workout" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" />
        <!-- List of exercises -->
        <ListView fx:id="exerciseListView"
                  prefHeight="500"
                  style="-fx-background-radius: 10; -fx-font-size:18px; -fx-text-fill: #ecfcfc;" />
    </VBox>

    <!-- Bottom controls -->
    <HBox alignment="CENTER" spacing="8"
          AnchorPane.bottomAnchor="24"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          prefWidth="390">

        <Button fx:id="pauseButton" text="Pause"
                onAction="#handlePauseResume"
                style="-fx-background-radius: 14; -fx-background-color: #333; -fx-text-fill: white;"
                prefWidth="120"/>

        <Label fx:id="timerLabel"
               style="-fx-text-fill: #9bb0ff; -fx-font-size: 38px; -fx-font-weight: bold;"
               prefWidth="120" alignment="CENTER" />

        <Button fx:id="finishButton" text="End Workout"
                onAction="#handleFinish"
                style="-fx-background-radius: 14; -fx-background-color: #ec3453; -fx-text-fill: white;"
                prefWidth="120"/>
    </HBox>
</AnchorPane>
