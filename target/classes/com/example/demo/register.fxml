<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.RegisterController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="25" styleClass="glass-card-heavy" style="-fx-pref-width: 500; -fx-padding: 50;">
            <Label text="Create an Account" styleClass="heading-2" />
            <Label text="Start your fitness journey today" styleClass="subtitle" />
            
            <VBox spacing="18" style="-fx-pref-width: 400;">
                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="First Name" styleClass="input-label" />
                        <TextField fx:id="firstNameField" promptText="First Name" styleClass="input-field" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Last Name" styleClass="input-label" />
                        <TextField fx:id="lastNameField" promptText="Last Name" styleClass="input-field" />
                    </VBox>
                </HBox>
                <VBox spacing="8">
                    <Label text="Email" styleClass="input-label" />
                    <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
                </VBox>
                <VBox spacing="8">
                    <Label text="Password" styleClass="input-label" />
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                </VBox>
            </VBox>
            
            <VBox spacing="15" alignment="CENTER" style="-fx-pref-width: 400;">
                <Button text="Register" onAction="#handleRegister" styleClass="btn-primary" style="-fx-pref-width: 400;" />
                <Button fx:id="backButton" text="Back to Login" onAction="#handleBackButton" styleClass="btn-link" />
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
