<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.demo.RegisterController">

    <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" spacing="25" style="-fx-background-radius: 20; -fx-padding: 50; -fx-pref-width: 500;">
            <Label style="-fx-text-fill: white; -fx-font-size: 49px; -fx-font-weight: bold; -fx-font-family: Baskerville;" text="Create an Account" textFill="WHITE">
                </Label>
            <Label style="-fx-font-family: baskerville; -fx-text-fill: white; -fx-font-size: 18px;" text="Start your fitness journey today" />

            <VBox spacing="18" style="-fx-pref-width: 400;">
                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="First Name" />
                        <TextField fx:id="firstNameField" promptText="First Name" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Last Name" />
                        <TextField fx:id="lastNameField" promptText="Last Name" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>
                </HBox>
                <VBox spacing="8">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Email" />
                    <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                </VBox>
                <VBox spacing="8">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                </VBox>
            </VBox>

            <VBox alignment="CENTER" spacing="15" style="-fx-pref-width: 400;">
                <Button onAction="#handleRegister" style="-fx-font-family: Arial Black; -fx-background-color: #9c27b0; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 200; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Register" />
                <Button fx:id="backButton" onAction="#handleBackButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand; -fx-border-color: transparent;" text="Back to Login" textFill="WHITE" />
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>

