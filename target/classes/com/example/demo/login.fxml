<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.LoginController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="25" styleClass="glass-card-heavy" style="-fx-pref-width: 450; -fx-padding: 50;">
            <Label text="Welcome Back" styleClass="heading-2" />
            <Label text="Sign in to continue your fitness journey" styleClass="subtitle" />
            
            <VBox spacing="20" style="-fx-pref-width: 350;">
                <VBox spacing="8">
                    <Label text="Email" styleClass="input-label" />
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="input-field" style="-fx-pref-width: 350;" />
                </VBox>
                <VBox spacing="8">
                    <Label text="Password" styleClass="input-label" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="input-field" style="-fx-pref-width: 350;" />
                </VBox>
            </VBox>
            
            <VBox spacing="15" alignment="CENTER" style="-fx-pref-width: 350;">
                <Button text="Login" onAction="#handleLogin" styleClass="btn-primary" style="-fx-pref-width: 350;" />
                <Button text="Create New Account" onAction="#handleShowRegister" styleClass="btn-link" />
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
