<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane prefHeight="800" prefWidth="1200" styleClass="anchor-pane" stylesheets="@shapeshift-styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ProfileSetupController">
    <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="scroll-pane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50; -fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="25" style="-fx-pref-width: 700; -fx-padding: 50; -fx-background-color: #eeeeee;" styleClass="glass-card-heavy">
                <Label style="-fx-font-family: Baskerville; -fx-font-size: 38; -fx-font-weight: bold;" styleClass="heading-2" text="Create Your Personalized Workout Plan" />
                <Label style="-fx-font-weight: bold; -fx-font-family: Baskerville; -fx-text-fill: black;" styleClass="subtitle" text="Tell us about yourself to generate a custom plan" />
                <Label fx:id="userEmailLabel" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" text="Email" />

                <VBox spacing="20" style="-fx-pref-width: 600;">
                    <!-- Goal Selection -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="input-label" text="Fitness Goal *" />
                        <HBox spacing="15" styleClass="toggle-button" stylesheets="@shapeshift-styles.css">
                            <ToggleButton fx:id="goalBulk" text="Bulk">
                                <toggleGroup>
                                    <ToggleGroup fx:id="goalGroup" />
                                </toggleGroup></ToggleButton>
                            <ToggleButton fx:id="goalCut" styleClass="toggle-button" stylesheets="@shapeshift-styles.css" text="Cut" toggleGroup="$goalGroup" />
                            <ToggleButton fx:id="goalMaintain" styleClass="toggle-button" text="Maintain" toggleGroup="$goalGroup" />
                        </HBox>
                    </VBox>

                    <!-- Experience Level -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 16px;" styleClass="input-label" text="Experience Level *" />
                        <HBox spacing="15" styleClass="toggle-button" stylesheets="@shapeshift-styles.css">
                            <ToggleButton fx:id="expBeginner" styleClass="toggle-button" text="Beginner">
                                <toggleGroup>
                                    <ToggleGroup fx:id="expGroup" />
                                </toggleGroup></ToggleButton>
                            <ToggleButton fx:id="expIntermediate" styleClass="toggle-button" text="Intermediate" toggleGroup="$expGroup" />
                            <ToggleButton fx:id="expAdvanced" styleClass="toggle-button" text="Advanced" toggleGroup="$expGroup" />
                        </HBox>
                    </VBox>

                    <!-- Days Per Week -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 16px;" styleClass="input-label" text="Workout Days Per Week *" />
                        <Slider fx:id="daysSlider" majorTickUnit="1" max="6" min="3" showTickLabels="true" showTickMarks="true" style="-fx-pref-width: 500;" styleClass="slider" value="3" />
                        <Label fx:id="daysLabel" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" text="3 days" />
                    </VBox>

                    <!-- Current Weight -->
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-size: 16px;" styleClass="input-label" text="Current Weight (lbs)" />
                            <TextField fx:id="currentWeightField" promptText="Enter weight" styleClass="input-field" />
                        </VBox>
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-size: 16px;" styleClass="input-label" text="Target Weight (lbs)" />
                            <TextField fx:id="targetWeightField" promptText="Enter target" styleClass="input-field" />
                        </VBox>
                    </HBox>

                    <!-- Body Fat Percentage -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 16px;" styleClass="input-label" text="Body Fat Percentage (%)" />
                        <TextField fx:id="bodyFatField" promptText="Optional" styleClass="input-field" />
                    </VBox>

                    <!-- Injuries -->
                    <VBox spacing="8">
                        <Label style="-fx-font-size: 16px;" styleClass="input-label" text="Injuries or Areas to Avoid (select all that apply)" />
                        <HBox spacing="10">
                            <CheckBox fx:id="injuryKnee" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Knee" />
                            <CheckBox fx:id="injuryShoulder" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Shoulder" />
                            <CheckBox fx:id="injuryBack" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Back" />
                            <CheckBox fx:id="injuryWrist" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Wrist" />
                            <CheckBox fx:id="injuryAnkle" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Ankle" />
                        </HBox>
                    </VBox>
                </VBox>

                <HBox alignment="CENTER" spacing="15" style="-fx-pref-width: 600;">
                    <Button onAction="#handleGeneratePlan" style="-fx-font-size: 18px; -fx-pref-width: 250; -fx-max-height: 140; -fx-font-family: arial black;" styleClass="btn-primary" text="Generate Plan" />
                    <Button onAction="#handleBack" style="-fx-pref-width: 150; -fx-background-color: #95a5a6; -fx-text-fill: white;" styleClass="btn-secondary" text="Back" />
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>