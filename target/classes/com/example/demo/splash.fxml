<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.SplashController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #8ec5fc, #e0c3fc);">

    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="200" prefWidth="300">
        <Label text="ShapeShift" style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button text="Get Started"
                fx:id="getStartedButton"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-background-radius: 30px;"
                onAction="#handleGetStarted" prefWidth="200" prefHeight="50"/>
    </VBox>
</AnchorPane>
