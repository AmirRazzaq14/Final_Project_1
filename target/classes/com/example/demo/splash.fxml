<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.SplashController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <VBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="30">
            <Label text="ShapeShift" styleClass="heading-1" />
            <Label text="Your Personal Workout Companion" styleClass="subtitle-white" style="-fx-font-size: 24px;" />
        </VBox>
        <Button text="Get Started"
                fx:id="getStartedButton"
                styleClass="btn-secondary"
                onAction="#handleGetStarted" 
                prefWidth="280" 
                prefHeight="60"
                style="-fx-font-size: 20px; -fx-background-radius: 35px;" />
    </VBox>
</AnchorPane>
