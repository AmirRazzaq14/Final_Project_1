<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane fx:controller="com.example.demo.WorkoutPlanViewController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="20" style="-fx-padding: 30;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label fx:id="planTitle" text="Your Workout Plan" styleClass="heading-white" style="-fx-font-size: 36px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Back" onAction="#handleBack" styleClass="btn-glass" style="-fx-pref-width: 100; -fx-pref-height: 45;" />
            </HBox>
            <VBox fx:id="planContainer" spacing="15" style="-fx-pref-width: 1140;" />
        </VBox>
    </ScrollPane>
</AnchorPane>