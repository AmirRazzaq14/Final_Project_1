<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane fx:controller="com.example.demo.HomeController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <Label text="What is your goal today?" 
           AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
           style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: center; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />

    <HBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60">

        <VBox alignment="CENTER" spacing="15"
              style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 25; -fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"
                       fx:id="cuttingImage" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Cutting" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Lose fat, stay strong." style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 16px;" />
            <Button text="Select" fx:id="cuttingBtn" onAction="#handleCutting" 
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        </VBox>

        <VBox alignment="CENTER" spacing="15"
              style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 25; -fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"
                       fx:id="bulkingImage" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Bulking" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Build muscle mass." style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 16px;" />
            <Button text="Select" fx:id="bulkingBtn" onAction="#handleBulking" 
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        </VBox>

        <VBox alignment="CENTER" spacing="15"
              style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 25; -fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0.5, 0, 5);">
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"
                       fx:id="maintainImage" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Maintaining" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Stay balanced and healthy." style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 16px;" />
            <Button text="Select" fx:id="maintainBtn" onAction="#handleMaintain" 
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 140; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
        </VBox>
    </HBox>

    <VBox fx:id="workoutSection" AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80" AnchorPane.topAnchor="550" spacing="20" visible="false">
        <Label fx:id="workoutTitle" text="Today's Suggested Workouts"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0.5, 0, 0);" />
        <VBox fx:id="workoutList" spacing="15"></VBox>
    </VBox>

</AnchorPane>
