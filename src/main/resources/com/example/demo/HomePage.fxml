<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane fx:controller="com.example.demo.HomeController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom, #5b6ef5, #a47ef5);">

    <!-- Title -->
    <Label text="What is your goal today?" layoutX="300" layoutY="40"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" />

    <!-- Cards Container -->
    <HBox layoutX="60" layoutY="100" spacing="40">
        <!-- Cutting Card -->
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 20;">
            <ImageView fitHeight="180" fitWidth="150" pickOnBounds="true" preserveRatio="true"
                       fx:id="cuttingImage" />
            <Label text="Cutting" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Lose fat, stay strong." style="-fx-text-fill: white;" />
            <Button text="Select" fx:id="cuttingBtn" onAction="#handleCutting" style="-fx-background-color: #80b3ff; -fx-background-radius: 20;" />
        </VBox>

        <!-- Bulking Card -->
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 20;">
            <ImageView fitHeight="180" fitWidth="150" pickOnBounds="true" preserveRatio="true"
                       fx:id="bulkingImage" />
            <Label text="Bulking" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Build muscle mass." style="-fx-text-fill: white;" />
            <Button text="Select" fx:id="bulkingBtn" onAction="#handleBulking" style="-fx-background-color: #80b3ff; -fx-background-radius: 20;" />
        </VBox>

        <!-- Maintaining Card -->
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 20;">
            <ImageView fitHeight="180" fitWidth="150" pickOnBounds="true" preserveRatio="true"
                       fx:id="maintainImage" />
            <Label text="Maintaining" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Stay balanced and healthy." style="-fx-text-fill: white;" />
            <Button text="Select" fx:id="maintainBtn" onAction="#handleMaintain" style="-fx-background-color: #80b3ff; -fx-background-radius: 20;" />
        </VBox>
    </HBox>

    <!-- Workout Section -->
    <VBox fx:id="workoutSection" layoutX="60" layoutY="450" spacing="15" visible="false">
        <Label fx:id="workoutTitle" text="Today's Suggested Workouts"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <VBox fx:id="workoutList" spacing="10"></VBox>
    </VBox>

</AnchorPane>
