<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<AnchorPane fx:controller="com.example.demo.HomeController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <Label text="What is your goal today?" 
           AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
           styleClass="heading-white" style="-fx-alignment: center;" />
    <HBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="120" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60">
        <VBox alignment="CENTER" spacing="15" styleClass="glass-card" style="-fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400;">
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"
                       fx:id="cuttingImage" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Cutting" styleClass="heading-4" style="-fx-text-fill: white;" />
            <Label text="Lose fat, stay strong." styleClass="body-text-white" />
            <Button text="Select" fx:id="cuttingBtn" onAction="#handleCutting" styleClass="btn-secondary" style="-fx-pref-width: 140;" />
        </VBox>
        <VBox alignment="CENTER" spacing="15" styleClass="glass-card" style="-fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400;">
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"
                       fx:id="bulkingImage" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Bulking" styleClass="heading-4" style="-fx-text-fill: white;" />
            <Label text="Build muscle mass." styleClass="body-text-white" />
            <Button text="Select" fx:id="bulkingBtn" onAction="#handleBulking" styleClass="btn-secondary" style="-fx-pref-width: 140;" />
        </VBox>
        <VBox alignment="CENTER" spacing="15" styleClass="glass-card" style="-fx-padding: 30; -fx-pref-width: 300; -fx-pref-height: 400;">
            <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true"
                       fx:id="maintainImage" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Maintaining" styleClass="heading-4" style="-fx-text-fill: white;" />
            <Label text="Stay balanced and healthy." styleClass="body-text-white" />
            <Button text="Select" fx:id="maintainBtn" onAction="#handleMaintain" styleClass="btn-secondary" style="-fx-pref-width: 140;" />
        </VBox>
    </HBox>
    <VBox fx:id="workoutSection" AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80" AnchorPane.topAnchor="550" spacing="20" visible="false">
        <Label fx:id="workoutTitle" text="Today's Suggested Workouts" styleClass="heading-3" style="-fx-text-fill: white;" />
        <VBox fx:id="workoutList" spacing="15"></VBox>
    </VBox>
</AnchorPane>
