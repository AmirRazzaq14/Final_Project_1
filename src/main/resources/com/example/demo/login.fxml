<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.LoginController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="600"
            style="-fx-background-color: #2c3e50;">
    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="100" prefWidth="300">
        <Label text="Login" style="-fx-text-fill: white; -fx-font-size: 20px;" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button text="Login" onAction="#handleLogin" />
        <Button text="Register new User" onAction="#handleShowRegister" />
    </VBox>
</AnchorPane>

