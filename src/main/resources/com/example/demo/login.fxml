<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController">
    <VBox alignment="CENTER" spacing="30" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" spacing="25" style="-fx-background-color: #20877; -fx-background-radius: 20; -fx-padding: 50; -fx-pref-width: 450;">
            <Label style="-fx-text-fill: white; -fx-font-size: 49; -fx-font-weight: bold; -fx-font-family: Baskerville;" text="Welcome Back" textFill="WHITE" />
            <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-family: Baskerville;" text="Sign in to continue your fitness journey" />

            <VBox spacing="20" style="-fx-pref-width: 350;">
                <VBox spacing="8">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Email" />
                    <TextField fx:id="emailField" promptText="Enter your email" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                </VBox>
                <VBox spacing="8">
                    <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                </VBox>
            </VBox>

            <VBox alignment="CENTER" spacing="15" style="-fx-pref-width: 350;">
                <Button onAction="#handleLogin" style="-fx-background-color: #9c27b0; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 200; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: Arial black;" text="Login" />
                <Button onAction="#handleShowRegister" style="-fx-background-color: transparent; -fx-text-fill: #eeeeee; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand; -fx-border-color: transparent;" text="Create New Account" />
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
