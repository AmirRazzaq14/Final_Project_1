<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.MyWorkoutPlanController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-background: transparent; -fx-background-color: transparent; -fx-control-inner-background: transparent;">
        <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label fx:id="planTitleLabel" text="My Workout Plan" style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Return to Home" onAction="#handleBack" 
                        style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-width: 180; -fx-pref-width: 180; -fx-max-width: 180; -fx-min-height: 45; -fx-pref-height: 45; -fx-max-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-padding: 10 20; -fx-content-display: CENTER; -fx-alignment: CENTER; -fx-mouse-transparent: false;" />
            </HBox>

            <!-- Connection Warning -->
            <HBox fx:id="connectionWarningBox" alignment="CENTER" spacing="10" style="-fx-background-color: rgba(243,156,18,0.2); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 10;" visible="false">
                <Label text="âš " style="-fx-text-fill: #f39c12; -fx-font-size: 24px;" />
                <Label fx:id="connectionWarningLabel" text="Firebase connection not available. Using local data storage." 
                       style="-fx-text-fill: #f39c12; -fx-font-size: 14px; -fx-font-weight: bold;" />
            </HBox>

            <!-- Selected Workouts -->
            <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25;">
                <Label text="Selected Workouts" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                <ScrollPane fitToWidth="true" style="-fx-pref-height: 550; -fx-min-height: 550; -fx-background: transparent;">
                    <VBox fx:id="selectedWorkoutsContainer" spacing="15" />
                </ScrollPane>
            </VBox>

            <!-- Logged Exercises -->
            <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25;">
                <Label text="ðŸ“ Logged Exercises" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                <ScrollPane fitToWidth="true" style="-fx-pref-height: 550; -fx-min-height: 550; -fx-background: transparent;">
                    <VBox fx:id="loggedExercisesContainer" spacing="10" />
                </ScrollPane>
            </VBox>

            <!-- Quick Actions -->
            <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 20; -fx-pref-width: 280;" alignment="CENTER">
                <Label text="âš¡ Quick Actions" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Button text="ðŸ“ Log Workout" onAction="#handleLogWorkout" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-min-width: 240; -fx-pref-width: 240; -fx-max-width: 240; -fx-min-height: 40; -fx-pref-height: 40; -fx-max-height: 40; -fx-cursor: hand; -fx-padding: 8 15; -fx-content-display: CENTER; -fx-alignment: CENTER; -fx-mouse-transparent: false;" />
                <Button text="ðŸ“ˆ View Progress Dashboard" onAction="#handleViewProgress" 
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-min-width: 240; -fx-pref-width: 240; -fx-max-width: 240; -fx-min-height: 40; -fx-pref-height: 40; -fx-max-height: 40; -fx-cursor: hand; -fx-padding: 8 15; -fx-content-display: CENTER; -fx-alignment: CENTER; -fx-mouse-transparent: false;" />
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>





