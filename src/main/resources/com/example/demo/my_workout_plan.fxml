<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.MyWorkoutPlanController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label fx:id="planTitleLabel" text="My Workout Plan" styleClass="heading-white" style="-fx-font-size: 42px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Return to Home" onAction="#handleBack" styleClass="nav-button" style="-fx-min-width: 180; -fx-pref-width: 180;" />
            </HBox>

            <!-- Selected Workouts -->
            <VBox spacing="15" styleClass="glass-card-heavy" style="-fx-padding: 25;">
                <Label text="Selected Workouts" styleClass="heading-3" />
                <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-pref-height: 550; -fx-min-height: 550;">
                    <VBox fx:id="selectedWorkoutsContainer" spacing="15" />
                </ScrollPane>
            </VBox>

            <!-- Logged Exercises -->
            <VBox spacing="15" styleClass="glass-card-heavy" style="-fx-padding: 25;">
                <Label text="ðŸ“ Logged Exercises" styleClass="heading-3" />
                <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-pref-height: 550; -fx-min-height: 550;">
                    <VBox fx:id="loggedExercisesContainer" spacing="10" />
                </ScrollPane>
            </VBox>

            <!-- Quick Actions -->
            <VBox spacing="10" styleClass="glass-card-heavy" style="-fx-padding: 20; -fx-pref-width: 280;" alignment="CENTER">
                <Label text="âš¡ Quick Actions" styleClass="heading-4" />
                <Button text="ðŸ“ Log Workout" onAction="#handleLogWorkout" styleClass="btn-primary" 
                        style="-fx-pref-width: 240; -fx-pref-height: 40; -fx-font-size: 14px; -fx-background-color: #3498db;" />
                <Button text="ðŸ“ˆ View Progress Dashboard" onAction="#handleViewProgress" styleClass="btn-primary" 
                        style="-fx-pref-width: 240; -fx-pref-height: 40; -fx-font-size: 14px;" />
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
