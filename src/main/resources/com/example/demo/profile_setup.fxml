<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.ProfileSetupController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50; -fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="25" styleClass="glass-card-heavy" style="-fx-pref-width: 700; -fx-padding: 50;">
                <Label text="Create Your Personalized Workout Plan" styleClass="heading-2" />
                <Label text="Tell us about yourself to generate a custom plan" styleClass="subtitle" />
                <Label fx:id="userEmailLabel" text="" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />

                <VBox spacing="20" style="-fx-pref-width: 600;">
                    <!-- Goal Selection -->
                    <VBox spacing="8">
                        <Label text="Fitness Goal *" styleClass="input-label" style="-fx-font-size: 16px;" />
                        <HBox spacing="15">
                            <ToggleButton fx:id="goalBulk" text="Bulk" toggleGroup="$goalGroup" styleClass="toggle-button" />
                            <ToggleButton fx:id="goalCut" text="Cut" toggleGroup="$goalGroup" styleClass="toggle-button" />
                            <ToggleButton fx:id="goalMaintain" text="Maintain" toggleGroup="$goalGroup" styleClass="toggle-button" />
                        </HBox>
                        <ToggleGroup fx:id="goalGroup" />
                    </VBox>

                    <!-- Experience Level -->
                    <VBox spacing="8">
                        <Label text="Experience Level *" styleClass="input-label" style="-fx-font-size: 16px;" />
                        <HBox spacing="15">
                            <ToggleButton fx:id="expBeginner" text="Beginner" toggleGroup="$expGroup" styleClass="toggle-button" />
                            <ToggleButton fx:id="expIntermediate" text="Intermediate" toggleGroup="$expGroup" styleClass="toggle-button" />
                            <ToggleButton fx:id="expAdvanced" text="Advanced" toggleGroup="$expGroup" styleClass="toggle-button" />
                        </HBox>
                        <ToggleGroup fx:id="expGroup" />
                    </VBox>

                    <!-- Days Per Week -->
                    <VBox spacing="8">
                        <Label text="Workout Days Per Week *" styleClass="input-label" style="-fx-font-size: 16px;" />
                        <Slider fx:id="daysSlider" min="3" max="6" value="3" showTickLabels="true" showTickMarks="true" majorTickUnit="1" styleClass="slider" style="-fx-pref-width: 500;" />
                        <Label fx:id="daysLabel" text="3 days" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    </VBox>

                    <!-- Current Weight -->
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Current Weight (lbs)" styleClass="input-label" style="-fx-font-size: 16px;" />
                            <TextField fx:id="currentWeightField" promptText="Enter weight" styleClass="input-field" />
                        </VBox>
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Target Weight (lbs)" styleClass="input-label" style="-fx-font-size: 16px;" />
                            <TextField fx:id="targetWeightField" promptText="Enter target" styleClass="input-field" />
                        </VBox>
                    </HBox>

                    <!-- Body Fat Percentage -->
                    <VBox spacing="8">
                        <Label text="Body Fat Percentage (%)" styleClass="input-label" style="-fx-font-size: 16px;" />
                        <TextField fx:id="bodyFatField" promptText="Optional" styleClass="input-field" />
                    </VBox>

                    <!-- Injuries -->
                    <VBox spacing="8">
                        <Label text="Injuries or Areas to Avoid (select all that apply)" styleClass="input-label" style="-fx-font-size: 16px;" />
                        <HBox spacing="10">
                            <CheckBox fx:id="injuryKnee" text="Knee" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
                            <CheckBox fx:id="injuryShoulder" text="Shoulder" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
                            <CheckBox fx:id="injuryBack" text="Back" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
                            <CheckBox fx:id="injuryWrist" text="Wrist" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
                            <CheckBox fx:id="injuryAnkle" text="Ankle" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
                        </HBox>
                    </VBox>
                </VBox>

                <HBox spacing="15" alignment="CENTER" style="-fx-pref-width: 600;">
                    <Button text="Generate Plan" onAction="#handleGeneratePlan" styleClass="btn-primary" style="-fx-font-size: 18px; -fx-pref-width: 250;" />
                    <Button text="Back" onAction="#handleBack" styleClass="btn-secondary" style="-fx-pref-width: 150; -fx-background-color: #95a5a6; -fx-text-fill: white;" />
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
