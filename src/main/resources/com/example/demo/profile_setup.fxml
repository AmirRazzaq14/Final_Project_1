<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.ProfileSetupController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-background: transparent; -fx-background-color: transparent; -fx-control-inner-background: transparent;">
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50; -fx-background-color: transparent;">
            <!-- Connection Warning -->
            <HBox fx:id="connectionWarningBox" alignment="CENTER" spacing="10" style="-fx-background-color: rgba(243,156,18,0.2); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 10; -fx-pref-width: 700;" visible="false">
                <Label text="âš " style="-fx-text-fill: #f39c12; -fx-font-size: 24px;" />
                <Label fx:id="connectionWarningLabel" text="Firebase connection not available. Profile will be saved locally." 
                       style="-fx-text-fill: #f39c12; -fx-font-size: 14px; -fx-font-weight: bold;" />
            </HBox>
            
            <VBox alignment="CENTER" spacing="25" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 50; -fx-pref-width: 700;">
                <Label text="Create Your Personalized Workout Plan" style="-fx-text-fill: #2c3e50; -fx-font-size: 36px; -fx-font-weight: bold;" />
                <Label text="Tell us about yourself to generate a custom plan" style="-fx-text-fill: #7f8c8d; -fx-font-size: 16px;" />

                <VBox spacing="20" style="-fx-pref-width: 600;">
                    <!-- Goal Selection -->
                    <VBox spacing="8">
                        <Label text="Fitness Goal *" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                        <HBox spacing="15">
                            <ToggleButton fx:id="goalBulk" text="Bulk" toggleGroup="$goalGroup" 
                                         style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <ToggleButton fx:id="goalCut" text="Cut" toggleGroup="$goalGroup" 
                                         style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <ToggleButton fx:id="goalMaintain" text="Maintain" toggleGroup="$goalGroup" 
                                         style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        </HBox>
                        <ToggleGroup fx:id="goalGroup" />
                    </VBox>

                    <!-- Experience Level -->
                    <VBox spacing="8">
                        <Label text="Experience Level *" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                        <HBox spacing="15">
                            <ToggleButton fx:id="expBeginner" text="Beginner" toggleGroup="$expGroup" 
                                         style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <ToggleButton fx:id="expIntermediate" text="Intermediate" toggleGroup="$expGroup" 
                                         style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <ToggleButton fx:id="expAdvanced" text="Advanced" toggleGroup="$expGroup" 
                                         style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        </HBox>
                        <ToggleGroup fx:id="expGroup" />
                    </VBox>

                    <!-- Days Per Week -->
                    <VBox spacing="8">
                        <Label text="Workout Days Per Week *" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Slider fx:id="daysSlider" min="3" max="6" value="3" showTickLabels="true" showTickMarks="true" majorTickUnit="1" 
                                style="-fx-pref-width: 500;" />
                        <Label fx:id="daysLabel" text="3 days" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    </VBox>

                    <!-- Current Weight -->
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Current Weight (lbs)" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                            <TextField fx:id="currentWeightField" promptText="Enter weight" 
                                       style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Target Weight (lbs)" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                            <TextField fx:id="targetWeightField" promptText="Enter target" 
                                       style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>
                    </HBox>

                    <!-- Body Fat Percentage -->
                    <VBox spacing="8">
                        <Label text="Body Fat Percentage (%)" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                        <TextField fx:id="bodyFatField" promptText="Optional" 
                                   style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>

                    <!-- Injuries -->
                    <VBox spacing="8">
                        <Label text="Injuries or Areas to Avoid (select all that apply)" style="-fx-text-fill: #2c3e50; -fx-font-size: 16px; -fx-font-weight: bold;" />
                        <HBox spacing="10">
                            <CheckBox fx:id="injuryKnee" text="Knee" />
                            <CheckBox fx:id="injuryShoulder" text="Shoulder" />
                            <CheckBox fx:id="injuryBack" text="Back" />
                            <CheckBox fx:id="injuryWrist" text="Wrist" />
                            <CheckBox fx:id="injuryAnkle" text="Ankle" />
                        </HBox>
                    </VBox>
                </VBox>

                <HBox spacing="15" alignment="CENTER" style="-fx-pref-width: 600;">
                    <Button text="Generate Plan" onAction="#handleGeneratePlan" 
                            style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-pref-width: 250; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
                    <Button text="Back" onAction="#handleBack" 
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12; -fx-pref-width: 150; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>

