<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.WorkoutSelectionController">

    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 50; -fx-pref-width: 700;" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0">

        <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Select &amp; Add Workouts" />

        <VBox spacing="15" style="-fx-pref-width: 600;">
            <VBox spacing="8">
                <Label text="Muscle Group" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                <ComboBox fx:id="muscleGroupComboBox" promptText="Select Muscle Group" style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px;" />
            </VBox>

            <VBox spacing="8">
                <Label text="Search Workouts" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                <TextField fx:id="workoutSearchField" promptText="Search workouts..." style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
            </VBox>

            <VBox spacing="8">
                <Label text="Available Workouts" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                <ListView fx:id="workoutListView" prefHeight="200" style="-fx-background-radius: 10; -fx-font-size: 14px;" />
            </VBox>
        </VBox>

        <HBox spacing="12" alignment="CENTER">
            <Button onAction="#handleAddWorkout" style="-fx-background-color: #667eea; -fx-background-radius: 12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 160; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Add to My Plan" />
            <Button onAction="#handleRemoveWorkout" style="-fx-background-color: #e74c3c; -fx-background-radius: 12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Remove from Plan" />
            <Button onAction="#handleBackToHome" style="-fx-background-color: #95a5a6; -fx-background-radius: 12; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 100; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Back" />
        </HBox>
        
        <VBox spacing="10" style="-fx-pref-width: 600;">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 18px;" text="My Workout Plan:" />
            <ListView fx:id="myWorkoutsListView" prefHeight="120" style="-fx-background-radius: 10; -fx-font-size: 14px;" />
        </VBox>
    </VBox>
</AnchorPane>
