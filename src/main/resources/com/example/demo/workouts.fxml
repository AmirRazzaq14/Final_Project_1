<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="1000" style="-fx-background-color: linear-gradient(to bottom, #5b6ef5, #a47ef5);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.WorkoutSelectionController">


    <VBox alignment="CENTER" layoutX="250.0" layoutY="40.0" spacing="16" style="-fx-background-color: rgba(255,255,255,0.15);                  -fx-background-radius: 25;                  -fx-padding: 35;                  -fx-pref-width: 500;" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="40.0">

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Select &amp; Add Workouts" />

        <ComboBox fx:id="muscleGroupComboBox" promptText="Muscle Group" style="-fx-background-radius: 10; -fx-pref-height: 40;" />

        <TextField fx:id="workoutSearchField" promptText="Search workouts..." style="-fx-background-radius: 10; -fx-pref-height: 38;" />

        <ListView fx:id="workoutListView" prefHeight="150" style="-fx-background-radius: 10;" />

        <HBox spacing="8">
            <Button onAction="#handleAddWorkout" style="-fx-background-color: #a47ef5;                            -fx-background-radius: 25;                            -fx-text-fill: white;                            -fx-font-weight: bold;                            -fx-font-size: 14px;                            -fx-pref-width: 140;                            -fx-pref-height: 35;" text="Add to My Plan" />
            <Button onAction="#handleRemoveWorkout" style="-fx-background-color: #80b3ff;                            -fx-background-radius: 25;                            -fx-text-fill: white;                            -fx-font-weight: bold;                            -fx-font-size: 14px;                            -fx-pref-width: 180;                            -fx-pref-height: 35;" text="Remove from My Plan" />


            <Button onAction="#handleBackToHome" style="-fx-background-color: #5b6ef5;                    -fx-background-radius: 25;                    -fx-text-fill: white;                    -fx-font-size: 14px;                    -fx-pref-width: 80;                    -fx-pref-height: 35;" text="Back" />
        </HBox>
        <Label style="-fx-font-weight:bold; -fx-text-fill: white;" text="My Workout Plan:" />
        <ListView fx:id="myWorkoutsListView" prefHeight="90" style="-fx-background-radius: 10;" />
        <Button
                fx:id="startWorkoutButton"
                text="Start Workout"
                onAction="#handleStartWorkout"
                disable="true"
                style="-fx-background-color: #39cf5c; -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 240; -fx-pref-height: 40;" />

    </VBox>
</AnchorPane>
