<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.SplashController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <VBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="30">
            <Label text="ShapeShift" style="-fx-font-size: 72px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
            <Label text="Your Personal Workout Companion" style="-fx-font-size: 24px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: normal;" />
        </VBox>
        <Button text="Get Started"
                fx:id="getStartedButton"
                style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 35px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.5, 0, 2);"
                onAction="#handleGetStarted" prefWidth="280" prefHeight="60"/>
    </VBox>
</AnchorPane>
