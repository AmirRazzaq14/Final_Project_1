<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SplashController">

    <VBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" spacing="30">
            <Label style="-fx-font-size: 75px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0); -fx-font-family: baskerville;" text="ShapeShift">
            </Label>
            <Label style="-fx-font-size: 25px; -fx-text-fill: rgba(255,255,255,0.9); -fx-font-weight: normal; -fx-font-family: baskerville;" text="Your Personal Workout Companion" />
        </VBox>
        <Button fx:id="getStartedButton" onAction="#handleGetStarted" prefHeight="60" prefWidth="280" style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 35px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.5, 0, 2); -fx-font-family: arial black; -fx-pref-height: 45; -fx-max-height: 140;" text="Get Started" />
    </VBox>
</AnchorPane>
