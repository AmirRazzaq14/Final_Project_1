<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:controller="com.example.demo.WorkoutHomeController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">

    <!-- Navigation Buttons -->
    <HBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
        <Button text="My Profile" onAction="#handleProfileSetup" styleClass="nav-button" style="-fx-min-width: 140; -fx-pref-width: 140;" />
        <Button text="My Workout Plan" onAction="#handleMyWorkoutPlan" styleClass="nav-button" style="-fx-min-width: 180; -fx-pref-width: 180;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Progress Dashboard" onAction="#handleProgressDashboard" styleClass="nav-button" style="-fx-min-width: 200; -fx-pref-width: 200;" />
    </HBox>

    <!-- Title -->
    <Label text="What is your goal today?" 
           AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
           styleClass="heading-white" style="-fx-alignment: center;" />

    <!-- Main Content Container -->
    <VBox fx:id="mainContent" alignment="CENTER" spacing="40"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="120" AnchorPane.bottomAnchor="0">

        <!-- Goal Selection Cards -->
        <HBox fx:id="goalCardsContainer" alignment="CENTER" spacing="40">
            <!-- Cutting Card -->
            <VBox alignment="CENTER" spacing="20" styleClass="glass-card" style="-fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380;">
                <Label text="Cutting" styleClass="heading-4" style="-fx-text-fill: white;" />
                <Label text="Lose fat, stay strong." wrapText="true" styleClass="body-text-white" style="-fx-alignment: center; -fx-pref-width: 220;" />
                <Button text="Select" onAction="#handleCutting" styleClass="btn-secondary" style="-fx-pref-width: 140;" />
            </VBox>
            <!-- Bulking Card -->
            <VBox alignment="CENTER" spacing="20" styleClass="glass-card" style="-fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380;">
                <Label text="Bulking" styleClass="heading-4" style="-fx-text-fill: white;" />
                <Label text="Build muscle mass." wrapText="true" styleClass="body-text-white" style="-fx-alignment: center; -fx-pref-width: 220;" />
                <Button text="Select" onAction="#handleBulking" styleClass="btn-secondary" style="-fx-pref-width: 140;" />
            </VBox>
            <!-- Maintaining Card -->
            <VBox alignment="CENTER" spacing="20" styleClass="glass-card" style="-fx-padding: 40; -fx-pref-width: 300; -fx-pref-height: 380;">
                <Label text="Maintaining" styleClass="heading-4" style="-fx-text-fill: white;" />
                <Label text="Stay balanced and healthy." wrapText="true" styleClass="body-text-white" style="-fx-alignment: center; -fx-pref-width: 220;" />
                <Button text="Select" onAction="#handleMaintain" styleClass="btn-secondary" style="-fx-pref-width: 140;" />
            </VBox>
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="customWorkoutsButton" text="Filter &amp; Select Custom Workouts" onAction="#handleSelectWorkouts"
                    styleClass="btn-secondary" style="-fx-font-size: 18px; -fx-pref-width: 300;" />
            <Button text="Personal Customization" onAction="#handlePersonalCustomization" 
                    styleClass="btn-secondary" style="-fx-font-size: 18px; -fx-pref-width: 280;" />
        </HBox>

        <!-- Workout Section - Replaces cards when visible -->
        <VBox fx:id="workoutSection" alignment="CENTER" spacing="20" visible="false" managed="false">
            <Label fx:id="workoutTitle" text="Today's Suggested Workouts" styleClass="heading-3" style="-fx-text-fill: white;" />
            <VBox fx:id="workoutList" spacing="15" alignment="CENTER" style="-fx-pref-width: 800;"/>
            <Button text="Back to Goals" onAction="#handleBackToGoals" styleClass="btn-secondary" style="-fx-pref-width: 180;" />
        </VBox>
    </VBox>

</AnchorPane>
