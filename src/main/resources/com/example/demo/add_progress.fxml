<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.AddProgressController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="700" prefHeight="600"
            stylesheets="@shapeshift-styles.css,@chart-styles.css"
            styleClass="anchor-pane" mouseTransparent="false">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" mouseTransparent="false">
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;" mouseTransparent="false">
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <Label text="ðŸ“Š Add Progress Entry" styleClass="heading-white" style="-fx-font-size: 32px;" />
                <Label text="Track your fitness journey" styleClass="subtitle-white" />
            </VBox>

            <!-- Main Form Card -->
            <VBox spacing="25" styleClass="glass-card-heavy" style="-fx-padding: 40; -fx-pref-width: 650;" mouseTransparent="false">
                <!-- Date Section -->
                <VBox spacing="10" style="-fx-background-color: rgba(102,126,234,0.1); -fx-background-radius: 15; -fx-padding: 20;">
                    <Label text="ðŸ“… Date" styleClass="heading-4" />
                    <DatePicker fx:id="datePicker" editable="true" styleClass="input-field" style="-fx-pref-height: 45; -fx-mouse-transparent: false;" />
                </VBox>

                <!-- Body Metrics Section -->
                <VBox spacing="15">
                    <Label text="ðŸ’ª Body Metrics" styleClass="heading-4" style="-fx-padding: 0 0 10 0;" />
                    <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Current Weight (lbs)" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="currentWeightField" promptText="Enter current weight" editable="true" styleClass="input-field" style="-fx-mouse-transparent: false;" />
                    </VBox>
                    <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Target Weight (lbs)" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="targetWeightField" promptText="Enter target weight" editable="true" styleClass="input-field" style="-fx-mouse-transparent: false;" />
                    </VBox>
                    <VBox spacing="8" style="-fx-background-color: rgba(102,126,234,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Body Fat Percentage (%)" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="bodyFatField" promptText="Enter body fat percentage" editable="true" styleClass="input-field" style="-fx-mouse-transparent: false;" />
                    </VBox>
                </VBox>

                <!-- Nutrition Section -->
                <VBox spacing="15">
                    <Label text="ðŸŽ Nutrition" styleClass="heading-4" style="-fx-padding: 0 0 10 0;" />
                    <HBox spacing="15">
                        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(39,174,96,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                            <Label text="Calories Consumed" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="caloriesConsumedField" promptText="Enter calories consumed" editable="true" styleClass="input-field" style="-fx-mouse-transparent: false;" />
                        </VBox>
                        <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(39,174,96,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                            <Label text="Calorie Target" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="caloriesTargetField" promptText="Enter calorie target" editable="true" styleClass="input-field" style="-fx-mouse-transparent: false;" />
                        </VBox>
                    </HBox>
                    <VBox spacing="8" style="-fx-background-color: rgba(39,174,96,0.05); -fx-background-radius: 12; -fx-padding: 15;">
                        <Label text="Steps" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="stepsField" promptText="Enter daily steps" editable="true" styleClass="input-field" style="-fx-mouse-transparent: false;" />
                    </VBox>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button text="ðŸ’¾ Save Entry" onAction="#handleSave" styleClass="btn-primary" style="-fx-pref-width: 250; -fx-pref-height: 50; -fx-mouse-transparent: false;" />
                    <Button text="Cancel" onAction="#handleCancel" styleClass="btn-secondary" style="-fx-pref-width: 250; -fx-pref-height: 50; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-mouse-transparent: false;" />
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
