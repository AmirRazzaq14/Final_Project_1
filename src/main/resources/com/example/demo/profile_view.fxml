<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.ProfileViewController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label text="My Profile" styleClass="heading-white" style="-fx-font-size: 42px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Return to Home" onAction="#handleBack" styleClass="nav-button" style="-fx-min-width: 180; -fx-pref-width: 180;" />
            </HBox>
            <!-- Profile Information Card -->
            <VBox spacing="20" styleClass="glass-card-heavy" style="-fx-pref-width: 800; -fx-padding: 40;">
                <Label text="Profile Information" styleClass="heading-3" />
                <VBox spacing="15" style="-fx-pref-width: 720;">
                    <VBox spacing="5">
                        <Label fx:id="emailLabel" styleClass="body-text" style="-fx-font-size: 16px;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label fx:id="loginCountLabel" styleClass="body-text" style="-fx-font-size: 16px;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label fx:id="currentWeightLabel" styleClass="body-text" style="-fx-font-size: 16px;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label fx:id="targetWeightLabel" styleClass="body-text" style="-fx-font-size: 16px;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label fx:id="bodyFatLabel" styleClass="body-text" style="-fx-font-size: 16px;" />
                    </VBox>
                    <VBox spacing="10" fx:id="injuriesContainer">
                        <!-- Injuries will be populated dynamically -->
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>
