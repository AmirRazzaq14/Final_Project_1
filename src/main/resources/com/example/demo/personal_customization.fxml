<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.PersonalCustomizationController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" style="-fx-background: transparent; -fx-background-color: transparent; -fx-control-inner-background: transparent;">
        <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label text="Personal Customization" style="-fx-text-fill: white; -fx-font-size: 42px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="View My Plan" onAction="#handleViewPlan" 
                        style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
                <Button text="Return to Home" onAction="#handleBack" 
                        style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
            </HBox>

            <!-- Connection Warning -->
            <HBox fx:id="connectionWarningBox" alignment="CENTER" spacing="10" style="-fx-background-color: rgba(243,156,18,0.2); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 10;" visible="false">
                <Label text="âš " style="-fx-text-fill: #f39c12; -fx-font-size: 24px;" />
                <Label fx:id="connectionWarningLabel" text="Firebase connection not available. Workout data will be saved locally." 
                       style="-fx-text-fill: #f39c12; -fx-font-size: 14px; -fx-font-weight: bold;" />
            </HBox>

            <!-- Main Content Grid -->
            <GridPane hgap="20" vgap="20" style="-fx-padding: 20;">
                <!-- Left Column: Exercise Logging -->
                <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2">
                    <Label text="Exercise Logging" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    
                    <VBox spacing="12">
                        <VBox spacing="5">
                            <Label text="Exercise Name" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="exerciseNameField" promptText="e.g., Bench Press" 
                                       style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>
                        
                        <HBox spacing="10">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Sets" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <TextField fx:id="setsField" promptText="Sets" 
                                           style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Reps" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <TextField fx:id="repsField" promptText="Reps" 
                                           style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Weight (lbs)" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                                <TextField fx:id="weightField" promptText="Weight" 
                                           style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                            </VBox>
                        </HBox>
                        
                        <VBox spacing="5">
                            <Label text="RPE (Rate of Perceived Exertion)" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Slider fx:id="rpeSlider" min="1" max="10" value="5" showTickLabels="true" showTickMarks="true" majorTickUnit="1" 
                                        style="-fx-pref-width: 300;" />
                                <Label fx:id="rpeLabel" text="5" style="-fx-text-fill: #667eea; -fx-font-size: 18px; -fx-font-weight: bold; -fx-pref-width: 30;" />
                                <Label text="(1=Easy, 10=Max)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                            </HBox>
                        </VBox>
                        
                        <Button text="Log Exercise" onAction="#handleLogExercise" 
                                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 540; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
                    </VBox>
                    
                    <Separator />
                    
                    <VBox spacing="10">
                        <Label text="Today's Logged Exercises" style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" />
                        <ListView fx:id="exerciseLogList" prefHeight="200" style="-fx-background-radius: 10; -fx-font-size: 13px;" />
                        <HBox spacing="10">
                            <Button text="Clear All" onAction="#handleClearLog" 
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;" />
                            <Button text="Save Workout" onAction="#handleSaveWorkout" 
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand;" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Column: Timers -->
                <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Workout Stopwatch" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    
                    <VBox spacing="15" alignment="CENTER">
                        <Label fx:id="stopwatchLabel" text="00:00:00" 
                               style="-fx-text-fill: #667eea; -fx-font-size: 48px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 15, 0.7, 0, 0);" />
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="stopwatchStartBtn" text="Start" onAction="#handleStopwatchStart" 
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand;" />
                            <Button fx:id="stopwatchPauseBtn" text="Pause" onAction="#handleStopwatchPause" 
                                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand;" />
                            <Button text="Reset" onAction="#handleStopwatchReset" 
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand;" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Rest Timer -->
                <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Rest Timer" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Auto-starts after logging an exercise" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                    
                    <VBox spacing="15" alignment="CENTER">
                        <Label fx:id="restTimerLabel" text="00:00" 
                               style="-fx-text-fill: #e74c3c; -fx-font-size: 42px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.5), 15, 0.7, 0, 0);" />
                        <HBox spacing="10" alignment="CENTER">
                            <Label text="Rest Duration (seconds):" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" />
                            <TextField fx:id="restDurationField" text="60" promptText="Seconds" 
                                       style="-fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 35; -fx-font-size: 14px; -fx-padding: 0 10;" />
                        </HBox>
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="restTimerStartBtn" text="Start Rest" onAction="#handleRestTimerStart" 
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 40; -fx-cursor: hand;" />
                            <Button text="Stop" onAction="#handleRestTimerStop" 
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand;" />
                        </HBox>
                        <ProgressBar fx:id="restProgressBar" prefWidth="400" progress="0" style="-fx-accent: #e74c3c; -fx-pref-height: 8;" />
                    </VBox>
                </VBox>

                <!-- HIIT Timer -->
                <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 1180;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <Label text="HIIT Interval Timer" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
                    
                    <GridPane hgap="15" vgap="15">
                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Work Duration (seconds)" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="workDurationField" text="30" promptText="Seconds" 
                                       style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>
                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Rest Duration (seconds)" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="restDurationHIITField" text="15" promptText="Seconds" 
                                       style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>
                        <VBox spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label text="Number of Rounds" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            <TextField fx:id="roundsField" text="10" promptText="Rounds" 
                                       style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>
                    </GridPane>
                    
                    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
                        <Label fx:id="hiitTimerLabel" text="Ready" 
                               style="-fx-text-fill: #667eea; -fx-font-size: 56px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 15, 0.7, 0, 0);" />
                        <Label fx:id="hiitStatusLabel" text="Round 0 / 0" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 18px; -fx-font-weight: bold;" />
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="hiitStartBtn" text="Start HIIT" onAction="#handleHIITStart" 
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
                            <Button text="Stop" onAction="#handleHIITStop" 
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 45; -fx-cursor: hand;" />
                        </HBox>
                        <ProgressBar fx:id="hiitProgressBar" prefWidth="600" progress="0" style="-fx-accent: #667eea; -fx-pref-height: 10;" />
                    </VBox>
                </VBox>
            </GridPane>
        </VBox>
    </ScrollPane>
</AnchorPane>

