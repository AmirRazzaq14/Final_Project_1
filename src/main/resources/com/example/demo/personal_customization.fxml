<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane fx:controller="com.example.demo.PersonalCustomizationController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@shapeshift-styles.css"
            styleClass="anchor-pane">
    <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label text="Personal Customization" styleClass="heading-white" style="-fx-font-size: 42px;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="View My Plan" onAction="#handleViewPlan" styleClass="nav-button" style="-fx-pref-width: 150;" />
                <Button text="Return to Home" onAction="#handleBack" styleClass="nav-button" style="-fx-pref-width: 180;" />
            </HBox>

            <!-- Main Content Grid -->
            <GridPane hgap="20" vgap="20" style="-fx-padding: 20;">
                <!-- Left Column: Exercise Logging -->
                <VBox spacing="15" styleClass="glass-card-heavy" style="-fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2">
                    <Label text="Exercise Logging" styleClass="heading-3" />
                    <VBox spacing="12">
                        <VBox spacing="5">
                            <Label text="Exercise Name" styleClass="input-label" />
                            <TextField fx:id="exerciseNameField" promptText="e.g., Bench Press" styleClass="input-field" style="-fx-pref-height: 40;" />
                        </VBox>
                        <HBox spacing="10">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Sets" styleClass="input-label" />
                                <TextField fx:id="setsField" promptText="Sets" styleClass="input-field" style="-fx-pref-height: 40;" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Reps" styleClass="input-label" />
                                <TextField fx:id="repsField" promptText="Reps" styleClass="input-field" style="-fx-pref-height: 40;" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Weight (lbs)" styleClass="input-label" />
                                <TextField fx:id="weightField" promptText="Weight" styleClass="input-field" style="-fx-pref-height: 40;" />
                            </VBox>
                        </HBox>
                        <VBox spacing="5">
                            <Label text="RPE (Rate of Perceived Exertion)" styleClass="input-label" />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Slider fx:id="rpeSlider" min="1" max="10" value="5" showTickLabels="true" showTickMarks="true" majorTickUnit="1" styleClass="slider" style="-fx-pref-width: 300;" />
                                <Label fx:id="rpeLabel" text="5" style="-fx-text-fill: #667eea; -fx-font-size: 18px; -fx-font-weight: bold; -fx-pref-width: 30;" />
                                <Label text="(1=Easy, 10=Max)" styleClass="subtitle" style="-fx-font-size: 12px;" />
                            </HBox>
                        </VBox>
                        <Button text="Log Exercise" onAction="#handleLogExercise" styleClass="btn-primary" style="-fx-pref-width: 540; -fx-pref-height: 45;" />
                    </VBox>
                    <Separator />
                    <VBox spacing="10">
                        <Label text="Today's Logged Exercises" styleClass="heading-4" />
                        <ListView fx:id="exerciseLogList" prefHeight="200" styleClass="list-view" style="-fx-font-size: 13px;" />
                        <HBox spacing="10">
                            <Button text="Clear All" onAction="#handleClearLog" styleClass="btn-danger" style="-fx-pref-width: 120; -fx-pref-height: 35; -fx-font-size: 14px;" />
                            <Button text="Save Workout" onAction="#handleSaveWorkout" styleClass="btn-success" style="-fx-pref-width: 120; -fx-pref-height: 35; -fx-font-size: 14px;" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Column: Timers -->
                <VBox spacing="15" styleClass="glass-card-heavy" style="-fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Workout Stopwatch" styleClass="heading-3" />
                    <VBox spacing="15" alignment="CENTER">
                        <Label fx:id="stopwatchLabel" text="00:00:00" 
                               style="-fx-text-fill: #667eea; -fx-font-size: 48px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 15, 0.7, 0, 0);" />
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="stopwatchStartBtn" text="Start" onAction="#handleStopwatchStart" styleClass="btn-success" style="-fx-pref-width: 100; -fx-pref-height: 40;" />
                            <Button fx:id="stopwatchPauseBtn" text="Pause" onAction="#handleStopwatchPause" 
                                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand;" />
                            <Button text="Reset" onAction="#handleStopwatchReset" styleClass="btn-danger" style="-fx-pref-width: 100; -fx-pref-height: 40;" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Rest Timer -->
                <VBox spacing="15" styleClass="glass-card-heavy" style="-fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Rest Timer" styleClass="heading-3" />
                    <Label text="Auto-starts after logging an exercise" styleClass="subtitle" style="-fx-font-size: 12px;" />
                    <VBox spacing="15" alignment="CENTER">
                        <Label fx:id="restTimerLabel" text="00:00" 
                               style="-fx-text-fill: #e74c3c; -fx-font-size: 42px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.5), 15, 0.7, 0, 0);" />
                        <HBox spacing="10" alignment="CENTER">
                            <Label text="Rest Duration (seconds):" styleClass="body-text" />
                            <TextField fx:id="restDurationField" text="60" promptText="Seconds" styleClass="input-field" style="-fx-pref-width: 100; -fx-pref-height: 35;" />
                        </HBox>
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="restTimerStartBtn" text="Start Rest" onAction="#handleRestTimerStart" styleClass="btn-danger" style="-fx-pref-width: 120; -fx-pref-height: 40;" />
                            <Button text="Stop" onAction="#handleRestTimerStop" 
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand;" />
                        </HBox>
                        <ProgressBar fx:id="restProgressBar" prefWidth="400" progress="0" styleClass="progress-bar" style="-fx-pref-height: 8;" />
                    </VBox>
                </VBox>

                <!-- HIIT Timer -->
                <VBox spacing="15" styleClass="glass-card-heavy" style="-fx-padding: 25; -fx-pref-width: 1180;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <Label text="HIIT Interval Timer" styleClass="heading-3" />
                    <GridPane hgap="15" vgap="15">
                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Work Duration (seconds)" styleClass="input-label" />
                            <TextField fx:id="workDurationField" text="30" promptText="Seconds" styleClass="input-field" style="-fx-pref-width: 150; -fx-pref-height: 40;" />
                        </VBox>
                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Rest Duration (seconds)" styleClass="input-label" />
                            <TextField fx:id="restDurationHIITField" text="15" promptText="Seconds" styleClass="input-field" style="-fx-pref-width: 150; -fx-pref-height: 40;" />
                        </VBox>
                        <VBox spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label text="Number of Rounds" styleClass="input-label" />
                            <TextField fx:id="roundsField" text="10" promptText="Rounds" styleClass="input-field" style="-fx-pref-width: 150; -fx-pref-height: 40;" />
                        </VBox>
                    </GridPane>
                    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
                        <Label fx:id="hiitTimerLabel" text="Ready" 
                               style="-fx-text-fill: #667eea; -fx-font-size: 56px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 15, 0.7, 0, 0);" />
                        <Label fx:id="hiitStatusLabel" text="Round 0 / 0" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 18px; -fx-font-weight: bold;" />
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="hiitStartBtn" text="Start HIIT" onAction="#handleHIITStart" styleClass="btn-success" style="-fx-font-size: 18px; -fx-pref-width: 150; -fx-pref-height: 45;" />
                            <Button text="Stop" onAction="#handleHIITStop" styleClass="btn-danger" style="-fx-font-size: 18px; -fx-pref-width: 150; -fx-pref-height: 45;" />
                        </HBox>
                        <ProgressBar fx:id="hiitProgressBar" prefWidth="600" progress="0" styleClass="progress-bar" style="-fx-pref-height: 10;" />
                    </VBox>
                </VBox>
            </GridPane>
        </VBox>
    </ScrollPane>
</AnchorPane>
