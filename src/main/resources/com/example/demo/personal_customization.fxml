<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.PersonalCustomizationController">

    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-control-inner-background: transparent;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: transparent;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label style="-fx-text-fill: white; -fx-font-size: 46px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0); -fx-font-family: Baskerville;" text="Personal Customization" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleViewPlan" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: Arial black;" text="View My Plan" />
                <Button onAction="#handleBack" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 180; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Return to Home" />
            </HBox>

            <!-- Connection Warning -->
            <HBox fx:id="connectionWarningBox" alignment="CENTER" spacing="10" style="-fx-background-color: rgba(243,156,18,0.2); -fx-background-radius: 10; -fx-padding: 15; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 10;" visible="false">
                <Label style="-fx-text-fill: #f39c12; -fx-font-size: 24px;" text="âš " />
                <Label fx:id="connectionWarningLabel" style="-fx-text-fill: #f39c12; -fx-font-size: 14px; -fx-font-weight: bold;" text="Firebase connection not available. Workout data will be saved locally." />
            </HBox>

            <!-- Main Content Grid -->
            <GridPane hgap="20" style="-fx-padding: 20;" vgap="20">
                <!-- Left Column: Exercise Logging -->
                <VBox spacing="15" style="-fx-background-color: #eeeeee; -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: Baskerville;" text="Exercise Logging" />

                    <VBox spacing="12">
                        <VBox spacing="5">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Exercise Name" />
                            <TextField fx:id="exerciseNameField" promptText="e.g., Bench Press" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                        </VBox>

                        <HBox spacing="10">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Sets" />
                                <TextField fx:id="setsField" promptText="Sets" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Reps" />
                                <TextField fx:id="repsField" promptText="Reps" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Weight (lbs)" />
                                <TextField fx:id="weightField" promptText="Weight" style="-fx-background-radius: 10; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" />
                            </VBox>
                        </HBox>

                        <VBox spacing="5">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="RPE (Rate of Perceived Exertion)" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Slider fx:id="rpeSlider" majorTickUnit="1" max="10" min="1" showTickLabels="true" showTickMarks="true" style="-fx-pref-width: 300;" value="5" />
                                <Label fx:id="rpeLabel" style="-fx-text-fill: #667eea; -fx-font-size: 18px; -fx-font-weight: bold; -fx-pref-width: 30;" text="5" />
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="(1=Easy, 10=Max)" />
                            </HBox>
                        </VBox>

                        <Button onAction="#handleLogExercise" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 540; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2); -fx-font-family: arial black;" text="Log Exercise" />
                    </VBox>

                    <Separator />

                    <VBox spacing="10">
                        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 20px; -fx-font-weight: bold; -fx-font-family: baskerville;" text="Today's Logged Exercises" />
                        <ListView fx:id="exerciseLogList" prefHeight="200" style="-fx-background-radius: 10; -fx-font-size: 13px;" />
                        <HBox spacing="10">
                            <Button onAction="#handleClearLog" style="-fx-background-color: #9c27b0; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand; -fx-font-family: arial black;" text="Clear All" />
                            <Button onAction="#handleSaveWorkout" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 35; -fx-cursor: hand; -fx-font-family: arial black;" text="Save Workout" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Column: Timers -->
                <VBox spacing="15" style="-fx-background-color: #eeeeee; -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: baskerville;" text="Workout Stopwatch" />

                    <VBox alignment="CENTER" spacing="15">
                        <Label fx:id="stopwatchLabel" style="-fx-text-fill: #667eea; -fx-font-size: 48px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 15, 0.7, 0, 0);" text="00:00:00" />
                        <HBox alignment="CENTER" spacing="15">
                            <Button fx:id="stopwatchStartBtn" onAction="#handleStopwatchStart" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand; -fx-font-family: arial black;" text="Start" />
                            <Button fx:id="stopwatchPauseBtn" onAction="#handleStopwatchPause" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand; -fx-font-family: arial black;" text="Pause" />
                            <Button onAction="#handleStopwatchReset" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand; -fx-font-family: arial black;" text="Reset" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Rest Timer -->
                <VBox spacing="15" style="-fx-background-color: #eeeeee; -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 580;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: baskerville;" text="Rest Timer" />
                    <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="Auto-starts after logging an exercise" />

                    <VBox alignment="CENTER" spacing="15">
                        <Label fx:id="restTimerLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 42px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.5), 15, 0.7, 0, 0);" text="00:00" />
                        <HBox alignment="CENTER" spacing="10">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;" text="Rest Duration (seconds):" />
                            <TextField fx:id="restDurationField" promptText="Seconds" style="-fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 35; -fx-font-size: 14px; -fx-padding: 0 10;" text="60" />
                        </HBox>
                        <HBox alignment="CENTER" spacing="15">
                            <Button fx:id="restTimerStartBtn" onAction="#handleRestTimerStart" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 40; -fx-cursor: hand; -fx-font-family: arial black;" text="Start Rest" />
                            <Button onAction="#handleRestTimerStop" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 40; -fx-cursor: hand; -fx-font-family: arial black;" text="Stop" />
                        </HBox>
                        <ProgressBar fx:id="restProgressBar" prefWidth="400" progress="0" style="-fx-accent: #e74c3c; -fx-pref-height: 8;" />
                    </VBox>
                </VBox>

                <!-- HIIT Timer -->
                <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25; -fx-pref-width: 1180;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: baskerville;" text="HIIT Interval Timer" />

                    <GridPane hgap="15" vgap="15">
                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Work Duration (seconds)" />
                            <TextField fx:id="workDurationField" promptText="Seconds" style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" text="30" />
                        </VBox>
                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Rest Duration (seconds)" />
                            <TextField fx:id="restDurationHIITField" promptText="Seconds" style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" text="15" />
                        </VBox>
                        <VBox spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Number of Rounds" />
                            <TextField fx:id="roundsField" promptText="Rounds" style="-fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-size: 14px; -fx-padding: 0 15;" text="10" />
                        </VBox>
                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>

                    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                        <Label fx:id="hiitTimerLabel" style="-fx-text-fill: #667eea; -fx-font-size: 56px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.5), 15, 0.7, 0, 0);" text="Ready" />
                        <Label fx:id="hiitStatusLabel" style="-fx-text-fill: #7f8c8d; -fx-font-size: 18px; -fx-font-weight: bold;" text="Round 0 / 0" />
                        <HBox alignment="CENTER" spacing="15">
                            <Button fx:id="hiitStartBtn" onAction="#handleHIITStart" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 45; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Start HIIT" />
                            <Button onAction="#handleHIITStop" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 150; -fx-pref-height: 45; -fx-cursor: hand;" text="Stop" />
                        </HBox>
                        <ProgressBar fx:id="hiitProgressBar" prefWidth="600" progress="0" style="-fx-accent: #667eea; -fx-pref-height: 10;" />
                    </VBox>
                </VBox>
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
        </VBox>
    </ScrollPane>
</AnchorPane>
