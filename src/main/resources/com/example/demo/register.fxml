<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="com.example.demo.RegisterController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="25" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 20; -fx-padding: 50; -fx-pref-width: 500;">
            <Label text="Create an Account" style="-fx-text-fill: #2c3e50; -fx-font-size: 32px; -fx-font-weight: bold;" />
            <Label text="Start your fitness journey today" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
            
            <VBox spacing="18" style="-fx-pref-width: 400;">
                <HBox spacing="15">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="First Name" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="firstNameField" promptText="First Name" 
                                   style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Last Name" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                        <TextField fx:id="lastNameField" promptText="Last Name" 
                                   style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                    </VBox>
                </HBox>
                <VBox spacing="8">
                    <Label text="Email" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <TextField fx:id="emailField" promptText="Email" 
                               style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                </VBox>
                <VBox spacing="8">
                    <Label text="Password" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <PasswordField fx:id="passwordField" promptText="Password" 
                                    style="-fx-background-radius: 10; -fx-pref-height: 45; -fx-font-size: 14px; -fx-padding: 0 15;" />
                </VBox>
            </VBox>
            
            <VBox spacing="15" alignment="CENTER" style="-fx-pref-width: 400;">
                <Button text="Register" onAction="#handleRegister" 
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 400; -fx-pref-height: 50; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" />
                <Button fx:id="backButton" text="Back to Login" onAction="#handleBackButton" 
                        style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand; -fx-border-color: transparent;" />
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
