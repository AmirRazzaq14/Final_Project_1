<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane fx:controller="com.example.demo.HomeController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">
    <VBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="20">
            <Label text="Welcome Home!" style="-fx-text-fill: white; -fx-font-size: 48px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);"/>
            <Label text="Ready to transform your body?" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 20px;"/>
        </VBox>
    </VBox>
</AnchorPane>
