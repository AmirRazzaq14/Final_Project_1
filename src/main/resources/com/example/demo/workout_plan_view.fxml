<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane fx:controller="com.example.demo.WorkoutPlanViewController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="20" style="-fx-padding: 30;">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Label fx:id="planTitle" text="Your Workout Plan" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0);" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Back" onAction="#handleBack" 
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12; -fx-pref-width: 100; -fx-pref-height: 45; -fx-cursor: hand;" />
            </HBox>
            
            <VBox fx:id="planContainer" spacing="15" style="-fx-pref-width: 1140;" />
        </VBox>
    </ScrollPane>
</AnchorPane>





